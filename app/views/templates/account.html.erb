<div class="row">
	<div class="col-lg-offset-3 col-lg-6">
	  <h1 class="page-header">
		<i class="fa fa-group"></i> <%=t('.page_header') %>
	  </h1>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-3 col-lg-6">
		<form name="changeUserSettingsForm" ng-init="init_settings_states(<%= @current_user.back_link_enabled %>)" ng-submit="change_user_settings(<%= @current_user.id %>)">
			<div class="form-group">
				<div class="input-group">
					<input type="checkbox" ng-model="userData.back_link_enabled">
					<%=t('.disable_back_link') %>
				</div>
			</div>
		
		<button type="submit" class="btn btn-primary btn-lg"><%=t(".save")%></button>
      </form>
	</div>
</div>

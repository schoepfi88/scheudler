<section class="hidden-print" ng-click="redirect_to_back(<%= @current_user.back_link_enabled %>)">
  	<h1 class="page-header">
		<i class="fa <%= @group.icon %>"></i> 
		<%= @group.name + t(".page_header") %>
	</h1>
</section>
<ul class="list-group">
  <% @group_members.each do |member| %>
	<li class="list-group-item">
		<%= member.name %>
		<% if @group.admins.find_by(user_id: member.id) != nil then %>
			<span class="badge"><%= t(".admin") + "  " %><i class="fa fa-ban"></i></span>
		<% else %>
			<% if @is_admin then %>
				<button class="btn btn-danger badge badge-btn" ng-click="remove_member(<%= @group.id %>, <%= member.id %>)">
					<%= t(".user") + "  " %>
					<i class="fa fa-remove"></i>
				</button>
			<% else %>
				<span class="badge"><%= t(".user") + "  " %><i class="fa fa-ban"></i></span>
			<% end %>
		<% end %>
	</li>
  <% end %>
</ul>

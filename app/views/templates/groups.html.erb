<section class="hidden-print">
  <h1 class="page-header">
	<i class="fa fa-group"></i> <%=t ( '.page_header') %>
	<a href="/#/groups_create">
        <button class="btn btn-primary pull-right"> <i class="fa fa-plus"></i>
            <span class="hidden-xs">
                <%=t ( '.create_group') %>
            </span>
        </button>
    </a>
  </h1>
</section>
<div class="row">
	<% if @groups.size == 0 %>
		<div class="jumbotron text-center">
			<i class="fa fa-group fa-5x"></i>
			<h2>
				<%=t ( ".help_title") %>
			</h2>
			<%=t ( ".help_paragraph1") %>
			<br>
			<%=t ( ".help_paragraph2") %>
		</div>
	<% else %>
		<% panel_type = ["info","warning","danger","default","success"] %>
		<% counter = 0 %>
		<% @groups.each do |group| %>
			<div class="col-lg-3 col-sm-6">
				<div class="panel panel-<%= panel_type[counter % panel_type.size] %> clickable" ng-click="redirect_to_group(<%= group.id %>)">
				  <div class="panel-heading">
					<div class="row">
					  <div class="col-xs-2">
						<i class="fa <%= group.icon %> fa-5x"></i>
					  </div>
					  <div class="col-xs-10 text-right">
						<p class="announcement-heading"><%= group.members.size %></p>
						<p class="announcement-text"><%=t(".members")%></p>
					  </div>
					</div>
				  </div>
				  <a href="/#/groups_dashboard/<%= group.id %>">
					<div class="panel-footer announcement-bottom">
					  <div class="row">
						<div class="col-xs-10">
						  <%= group.name %>
						</div>
						<div class="col-xs-2 text-right">
						  <i class="fa fa-arrow-circle-right"></i>
						</div>
					  </div>
					</div>
				  </a>
				</div>
			</div>
			<% counter += 1 %>
		<% end %>
	<% end %>
</div>

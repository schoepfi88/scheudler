<section class="hidden-print">
  <h1 class="page-header">
	<i class="fa fa-group"></i> <%=t ( '.page_header') %>
    <button class="btn btn-primary pull-right"ng-click="redirect_to_groups_create(<%= @is_google_user %>)">
		<i class="fa fa-plus"></i>
        <span class="hidden-xs">
            <%=t('.create_group') %>
        </span>
    </button>
  </h1>
</section>
<div class="row">
	<% if @groups.size == 0 %>
		<div class="jumbotron text-center">
			<i class="fa fa-group fa-5x"></i>
			<h2>
				<%=t ( ".help_title") %>
			</h2>
			<%=t ( ".help_paragraph1") %>
			<br>
			<%=t ( ".help_paragraph2") %>
		</div>
	<% else %>
		<% counter = 0 %>
		<% @groups.each do |group| %>
			<div class="col-lg-6 col-sm-12">
				<div class="panel panel-default clickable" ng-click="redirect_to_group(<%= group.id %>, <%= @groups.index(group) %>)">
				  <div class="panel-heading">
					<div class="row">
					  <div class="col-xs-12">
						<p class="announcement-heading align-top">
							<i class="<%= group.icon %> flaticon-medium"></i>
							<%= group.name%>
						</p>
					  </div>
					</div>
				  </div>
				</div>
			</div>
			<% counter += 1 %>
		<% end %>
	<% end %>
</div>

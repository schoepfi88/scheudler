<div class="row modal-body">
    <div class="page-head">
        <h1 class="page-header"><i class="fa fa-group"></i>
            <%=t ( '.page_header') %>
                <a href="/#/groups_create">
                    <button ng-click="blabla" class="btn btn-primary pull-right"> <i class="fa fa-plus"></i>
                        <span class="hidden-xs">
                            <%=t ( '.create_group') %>
                        </span>
                    </button>
                </a>
        </h1>
    </div>
</div>
<div class="row">
	<% if @groups.size == 0 %>
		<div class="jumbotron text-center">
			<i class="fa fa-group fa-5x"></i>
			<h2>
				<%=t ( ".help_title") %>
			</h2>
			<%=t ( ".help_paragraph1") %>
			<br>
			<%=t ( ".help_paragraph2") %>
		</div>
	<% else %>
		<% @groups.each do |group| %>
			<%= simple_format group.name %>
		<% end %>
	<% end %>
</div>

<script language="javascript" type="text/javascript">
  $(document).ready(function() {
    // page is now ready, initialize the calendar...
	if(window.innerWidth > 490) {
	    $('#calendar').fullCalendar({
	    	firstDay: 1,
	    	height: window.innerHeight * 0.78 - 120,
	    	header: {
	            left: 'prev,today,next',
	            center: 'title',
	            right: 'agendaDay,agendaWeek,month'
	        },
	        events: {
			    url: 'api/event',
			    color: '#3465A4', 
			    textColor: 'white'
			}
	    })
    } else {
    	$('#calendar').fullCalendar({
	    	firstDay: 1,
	    	height: window.innerHeight * 0.78 - 120,
	    	header: {
	            left: 'prev,today,next',
	            center: '',
	            right: 'agendaDay,agendaWeek,month'
	        },
	        events: {
			    url: 'api/event',
			    color: '#3465A4', 
			    textColor: 'white'
			}
	    })
    } 	
  });
</script>

<section class="hidden-print">
  <h1 class="page-header"><span class="fa fa-calendar"></span> <%= t('.page_header') %></h1>
</section>

<div id='calendar'></div>